<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="32dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/main_iv_user"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignBottom="@+id/main_user_name"
        android:layout_margin="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_account_circle_grey_500_24dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/main_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_toRightOf="@id/main_iv_user">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="10"
            android:singleLine="true"
            android:text="3113006101"/>
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/main_iv_password"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignBottom="@+id/main_password"
        android:layout_margin="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_lock_grey_500_24dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/main_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_user_name"
        android:layout_toRightOf="@id/main_iv_password">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:singleLine="true"
            android:text="yuxiran1995"/>
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/main_iv_check_code"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignBottom="@+id/main_check_code"
        android:layout_margin="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_verified_user_grey_500_24dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/main_check_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_password"
        android:layout_toRightOf="@+id/main_iv_check_code">

        <EditText
            android:id="@+id/et_check_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="4"
            android:minWidth="90dp"
            android:singleLine="true"/>
    </android.support.design.widget.TextInputLayout>


    <ImageView
        android:id="@+id/check_code"
        android:layout_width="72dp"
        android:layout_height="27dp"
        android:layout_alignBottom="@id/main_check_code"
        android:layout_margin="8dp"
        android:layout_toRightOf="@+id/main_check_code"
        android:clickable="true"
        android:scaleType="centerCrop"/>

    <Button
        android:id="@+id/main_read_check_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/main_check_code"
        android:layout_toRightOf="@id/check_code"
        android:text="自动识别验证码(实验性)"
        android:textSize="10sp"
        android:theme="@style/AppTheme.Dark"/>


    <Button
        android:id="@+id/login"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/main_check_code"
        android:text="登录"/>

</RelativeLayout>
