<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragment_week_schedule_tv_month"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="1月"
        android:textColor="?colorPrimaryDark"
        android:textStyle="bold"
        app:layout_widthPercent="9%"/>

    <TextView
        android:id="@+id/fragment_week_schedule_tv_sun"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_toRightOf="@id/fragment_week_schedule_tv_month"
        android:gravity="center"
        android:text="周日"
        app:layout_widthPercent="13%"/>

    <TextView
        android:id="@+id/fragment_week_schedule_tv_mon"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_toRightOf="@id/fragment_week_schedule_tv_sun"
        android:gravity="center"
        android:text="周一"
        app:layout_widthPercent="13%"/>

    <TextView
        android:id="@+id/fragment_week_schedule_tv_tue"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_toRightOf="@id/fragment_week_schedule_tv_mon"
        android:gravity="center"
        android:text="周二"
        app:layout_widthPercent="13%"/>

    <TextView
        android:id="@+id/fragment_week_schedule_tv_wed"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_toRightOf="@id/fragment_week_schedule_tv_tue"
        android:gravity="center"
        android:text="周三"
        app:layout_widthPercent="13%"/>

    <TextView
        android:id="@+id/fragment_week_schedule_tv_thu"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_toRightOf="@+id/fragment_week_schedule_tv_wed"
        android:gravity="center"
        android:text="周四"
        app:layout_widthPercent="13%"/>

    <TextView
        android:id="@+id/fragment_week_schedule_tv_fri"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_toRightOf="@+id/fragment_week_schedule_tv_thu"
        android:gravity="center"
        android:text="周五"
        app:layout_widthPercent="13%"/>

    <TextView
        android:id="@+id/fragment_week_schedule_tv_sat"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_toRightOf="@+id/fragment_week_schedule_tv_fri"
        android:gravity="center"
        android:text="周六"
        app:layout_widthPercent="13%"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragment_week_schedule_tv_month">

        <com.rdc.gduthelper.ui.widget.WeekScheduleView
            android:id="@+id/fragment_week_schedule_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>


</android.support.percent.PercentRelativeLayout>