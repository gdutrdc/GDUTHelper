<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.Blue" parent="AppTheme">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryDark">@color/blue_700</item>
        <item name="colorAccent">@color/pink_a200</item>
    </style>

    <style name="AppTheme.Pink" parent="AppTheme">
        <item name="colorPrimary">@color/pink_500</item>
        <item name="colorPrimaryDark">@color/pink_700</item>
        <item name="colorAccent">#FF9800</item>
    </style>

    <style name="FABStyle">
        <item name="android:layout_marginBottom">-44dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="borderWidth">0dp</item>
    </style>

</resources>
