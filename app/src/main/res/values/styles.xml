<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"/>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="AppTheme.Dark" parent="Theme.AppCompat"/>

    <style name="AppTheme.Blue">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryDark">@color/blue_700</item>
        <item name="colorAccent">@color/pink_a200</item>
    </style>

    <style name="AppTheme.Pink">
        <item name="colorPrimary">@color/pink_500</item>
        <item name="colorPrimaryDark">@color/pink_700</item>
        <item name="colorAccent">#FF9800</item>
    </style>

    <style name="AppTheme.Blue.NoActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryDark">@color/blue_700</item>
        <item name="colorAccent">@color/pink_a200</item>
    </style>

    <style name="AppTheme.Pink.NoActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/pink_500</item>
        <item name="colorPrimaryDark">@color/pink_700</item>
        <item name="colorAccent">#FF9800</item>
    </style>

    <style name="GetGradeFABStyle">
        <item name="android:layout_marginBottom">-44dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="borderWidth">0dp</item>
    </style>

    <style name="GetInfoFABStyle">
        <item name="android:layout_margin">0dp</item>
        <item name="borderWidth">0dp</item>
    </style>

</resources>
